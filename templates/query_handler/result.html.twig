{% extends 'base.html.twig' %}

{% block title %} {{ title }} {% endblock %}

 {% block navside %}
    <div class="row">
        <div class="col-lg-12">
            <h2>{{ title }} </h2>   
        </div>
    </div>
    <div class="row">
    <div class="col-lg-12 ">
        <div class="alert message-info">
            <strong>Query result for: </strong>
            <code>{{ query }}</code>
        </div>
    </div>
</div>           
{% endblock %}

{% block content %}

    <table class="table table-striped  table-hover">
        <thead>
        
                <tr>
                    {% for head in header %}
                        <th>{{ head }}</th>
                    {% endfor %}   
                </tr>

        </thead>

        {% for record in items %}
            <tr>
                {% for col in record %}
                    <td style='width:150px;border:1px solid black;'>{{ col }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>  

{% endblock %}